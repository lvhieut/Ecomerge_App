<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:elevation="3dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgFood"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_marginStart="3dp"
        android:src="@drawable/search_interface_symbol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="2dp"
        app:riv_border_width="0.5dp"
        app:riv_corner_radius="10dip"
        app:riv_mutate_background="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNameFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/imgFood"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.421"
        tools:text="@string/name_food" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7dp"
        android:maxLines="1"
        android:text="@string/price"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/imgFood"
        app:layout_constraintTop_toBottomOf="@id/tvNameFood"
        app:layout_constraintVertical_bias="0.421" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgFood" />

    <!--CODE XONG NHá»š FORMAT-->

</androidx.constraintlayout.widget.ConstraintLayout>